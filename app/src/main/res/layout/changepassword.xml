<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter old password:"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/textChangePasswordOldPassword"
        android:layout_marginTop="8dp"
        android:background="@drawable/button"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:hint="Old password"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter new password:"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/textChangePasswordNewPassword"
        android:layout_marginTop="8dp"
        android:background="@drawable/button"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:hint="New password"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm new password:"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/textChangePasswordConfirmPassword"
        android:layout_marginTop="8dp"
        android:background="@drawable/button"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:hint="Confirm password"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/btnChangePasswordCancel"
            android:text="Cancel"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/btnChangePasswordSave"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button1"
            android:text="Save"/>

    </LinearLayout>

</LinearLayout>